---
import { Image } from "astro:assets";
import logoAF from "../../Imagenes/af2.png";
---
<nav id="navbar" class="fixed w-full top-0 left-0 z-50 border-b-3 border-white/90 bg-transparent text-white transition-all duration-300">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="#index" class="flex items-center">
        <Image
          class="hidden lg:block md:w-[150px] object-cover "
          src={logoAF}
          alt="Logo de Afortunados"
        />
      </a>

      <!-- Botón de menú para móviles -->
      <div>
        <button id="menu-button" class="md:hidden text-white bg-black">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <div class="hidden md:flex space-x-6 lg:mr-20">
        <div class="relative group">
          <button class="hover:text-black">Tours & Experiencias</button>
          <div class="absolute left-0 mt-2 w-48 bg-white text-gray-800 rounded-md shadow-lg opacity-0 invisible 
                      group-hover:opacity-100 group-hover:visible transition-all">
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Termales</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Transportes</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Cultural</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Aventuras</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Naturaleza</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Servicios de Spa</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Culinarios</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Yoga</a>
          </div>
        </div>
        
        <div class="relative group">
          <button class="hover:text-black">Hospedajes Vacacionales</button>
          <div class="absolute left-0 mt-2 w-48 bg-white text-gray-800 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">La Fortuna</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Monteverde</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Tamarindo</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Manuel Antonio</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Jacó</a>
          </div>
        </div>
        <div class="relative group">
          <button class="hover:text-black">Paquetes & Todo incluido</button>
          <div class="absolute left-0 mt-2 w-48 bg-white text-gray-800 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Todo incluido</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Aventura</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Romantico</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Wildlife</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Nature</a>
          </div>
        </div>
        <div class="relative group">
          <button class="hover:text-black">Internacional</button>
          <div class="absolute left-0 mt-2 w-48 bg-white text-gray-800 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Opción 1</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-200">Opción 2</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Menú desplegable para móviles -->
  <div id="mobile-menu" class="md:hidden absolute top-16 left-0 w-full bg-white shadow-lg opacity-0 invisible transition-opacity">
    <div class="space-y-2 px-4 py-4">
      <div class="relative">
        <button class="text-gray-800 w-full text-left py-2" id="mobile-tours">Tours & Experiencias</button>
        <div id="tours-submenu" class="space-y-2 pl-4 hidden text-black">
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Termales</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Transportes</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Cultural</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Aventuras</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Naturaleza</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Servicios de Spa</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Culinarios</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Yoga</a>
        </div>
      </div>

      <div class="relative">
        <button class="text-gray-800 w-full text-left py-2" id="mobile-hospedajes">Hospedajes Vacacionales</button>
        <div id="hospedajes-submenu" class="space-y-2 pl-4 hidden text-black">
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">La Fortuna</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Monteverde</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Tamarindo</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Manuel Antonio</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Jacó</a>
        </div>
      </div>

      <div class="relative">
        <button class="text-gray-800 w-full text-left py-2" id="mobile-paquetes">Paquetes & Todo incluido</button>
        <div id="paquetes-submenu" class="space-y-2 pl-4 hidden text-black">
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Todo incluido</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Aventura</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Romantico</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Wildlife</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Nature</a>
        </div>
      </div>

      <div class="relative">
        <button class="text-gray-800 w-full text-left py-2" id="mobile-af2">Internacional</button>
        <div id="af2-submenu" class="space-y-2 pl-4 hidden text-black">
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Opción 1</a>
          <a href="#" class="block px-4 py-2 hover:bg-gray-200">Opción 2</a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>

 window.addEventListener("scroll", function () {
    const navbar = document.getElementById("navbar");

    if (window.scrollY > 50) {
      navbar?.classList.remove("bg-transparent", "text-white");
      navbar?.classList.add(
        "bg-white",
        "shadow-lg",
        "text-black",
      );
  
    } else {
      navbar?.classList.remove(
        "bg-white",
        "shadow-lg",
        "text-black",
      );
      navbar?.classList.add("bg-transparent", "text-white");
    }
  });

  // Mostrar u ocultar el menú móvil al hacer clic en el botón
  const menuButton = document.getElementById('menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('opacity-0');
    mobileMenu?.classList.toggle('invisible');
    mobileMenu?.classList.toggle('opacity-100');
    mobileMenu?.classList.toggle('visible');
  });

  // Mostrar u ocultar submenús al hacer clic en cada opción
  const mobileTours = document.getElementById('mobile-tours');
  const toursSubmenu = document.getElementById('tours-submenu');
  mobileTours?.addEventListener('click', () => {
  toursSubmenu?.classList.toggle('hidden');
  });

  const mobileHospedajes = document.getElementById('mobile-hospedajes');
  const hospedajesSubmenu = document.getElementById('hospedajes-submenu');
  mobileHospedajes?.addEventListener('click', () => {
  hospedajesSubmenu?.classList.toggle('hidden');
  });

  const mobilePaquetes = document.getElementById('mobile-paquetes');
  const paquetesSubmenu = document.getElementById('paquetes-submenu');
  mobilePaquetes?.addEventListener('click', () => {
  paquetesSubmenu?.classList.toggle('hidden');
  });

  const mobileAf2 = document.getElementById('mobile-af2');
  const af2Submenu = document.getElementById('af2-submenu');
  mobileAf2?.addEventListener('click', () => {
  af2Submenu?.classList.toggle('hidden');
  });
</script>


