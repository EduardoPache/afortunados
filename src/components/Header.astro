---
import { Image } from "astro:assets";
import logoAF from "../assets/af2.png";

let isOpen = false;
function toggleMenu() {
  isOpen = !isOpen;
  const nav = document.getElementById("mobile-menu");
  nav.classList.toggle("hidden");
}
---

<header class="absolute top-0 left-0 w-full z-50">
  <nav class="flex items-center justify-between px-6 md:px-12 bg-white/10 backdrop-blur-md text-white">
    <!-- Logo -->
    <a href="/">
    <Image src={logoAF} alt="Logo de Afortunados" class="h-36 w-36" />
    </a>

    <!-- Menú de escritorio -->
    <ul class="hidden md:flex gap-8 text-sm font-medium uppercase tracking-wider">
      <li><a href="#tours" class="hover:underline">Tours & Experiencias</a></li>
      <li><a href="#hospedajes" class="hover:underline">Hospedajes Vacacionales</a></li>
      <li><a href="#paquetes" class="hover:underline">Paquetes & Todo incluido</a></li>
      <li><a href="#internacional" class="hover:underline">Internacional</a></li>
    </ul>

    <!-- Botón hamburguesa -->
    <button
      class="md:hidden focus:outline-none"
      onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="hidden md:hidden bg-[#879996] text-white p-6">
    <ul class="flex flex-col gap-4 text-sm font-medium uppercase tracking-wide">
      <li><a href="#tours" class="hover:underline">Tours & Experiencias</a></li>
      <li><a href="#hospedajes" class="hover:underline">Hospedajes Vacacionales</a></li>
      <li><a href="#paquetes" class="hover:underline">Paquetes & Todo incluido</a></li>
      <li><a href="#internacional" class="hover:underline">Internacional</a></li>
    </ul>
  </div>
</header>
