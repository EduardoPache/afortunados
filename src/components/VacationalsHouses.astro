---
import { Image } from "astro:assets"
import v2 from "../../Imagenes/v2.jpg"
import hoteles from "../Data/hotels.json"
import houses from "../Data/houses.json"
---

<section class="max-w-6xl mx-auto p-6">
 
  <h2 class="text-3xl font-bold text-[#879996]">HOSPEDAJES VACACIONALES</h2>
  <a href=""><h3 class="text-xl italic text-[#879996] mt-2">Hoteles</h3></a>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
    {hoteles.map((hotel) => (
      <div class="border-b-3 p-4">

        <img src={hotel.imagen} alt={hotel.nombre} class="h-40 w-full object-cover rounded-md" />

        <h4 class="mt-4 text-lg font-bold text-gray-700">{hotel.nombre}</h4>
        <p class="text-sm text-gray-600 mt-2">{hotel.descripcion}</p>

        <div class="mt-4 flex justify-between items-center">
          <span class="text-lg font-bold text-gray-700">${hotel.precio}</span>
          <a href="#" class="inline-flex items-center px-3 py-2 text-white bg-[#879996] rounded-lg ">
             <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
        </div>
      </div>
    ))}
  </div>
</section>

<section class="max-w-6xl mx-auto p-6">
 
    <a href=""><h3 class="text-xl italic text-[#879996] mt-2">Casas Vacacionales</h3></a>
  
    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
      {houses.map((houses) => (
        <div class="border-b-3 p-4">
  
          <img src={houses.imagen} alt={houses.nombre} class="h-40 w-full object-cover rounded-md" />
  
          <h4 class="mt-4 text-lg font-bold text-gray-700">{houses.nombre}</h4>
          <p class="text-sm text-gray-600 mt-2">{houses.descripcion}</p>
  
          <div class="mt-4 flex justify-between items-center">
            <span class="text-lg font-bold text-gray-700">${houses.precio}</span>
            <a href="#" class="inline-flex items-center px-3 py-2 text-white bg-[#879996] rounded-lg ">
               <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
          </a>
          </div>
        </div>
      ))}
    </div>
  </section>
  


