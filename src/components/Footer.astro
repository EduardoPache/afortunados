---
import { Image } from "astro:assets";
import logoAF from "../assets/af2.png";
import facebook from "../assets/facebook.png";
import instagram from "../assets/instagram.png";
import whatsapp from "../assets/whatsapp.png";
---

<footer id="Footer" class="bg-[#879996] text-white py-12 px-6">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-5 gap-10">
    <!-- Logo y redes -->
    <div class="col-span-1 space-y-4">
      <a href="#index" class="block">
        <Image
          src={logoAF}
          alt="Logo de Afortunados"
          class="w-[150px] object-contain"
        />
      </a>
      <h3 class="text-lg font-semibold text-white">Síguenos</h3>
      <div class="flex gap-4">
        <a href="#" class="p-2 rounded-full text-[#879996] hover:scale-110 transition">
          <Image src={facebook} alt="Facebook"/>
        </a>
        <a href="#" class="p-2 rounded-full text-[#879996] hover:scale-110 transition">
          <Image src={instagram} alt="Facebook"/>
        </a>
        <a href="#" class="p-2 rounded-full text-[#879996] hover:scale-110 transition">
          <Image src={whatsapp} alt="Facebook"/>
        </a>
      </div>
    </div>

    <!-- Enlaces -->
    <div class="col-span-4 grid grid-cols-2 sm:grid-cols-4 gap-6 text-sm">
      <div>
        <h4 class="font-semibold mb-3">Experiencias</h4>
        <ul class="space-y-2">
          <li><a href="#" class="hover:underline">Termales</a></li>
          <li><a href="#" class="hover:underline">Transportes</a></li>
          <li><a href="#" class="hover:underline">Cultural</a></li>
          <li><a href="#" class="hover:underline">Aventuras</a></li>
          <li><a href="#" class="hover:underline">Naturaleza</a></li>
          <li><a href="#" class="hover:underline">Servicios de Spa</a></li>
          <li><a href="#" class="hover:underline">Culinarios</a></li>
          <li><a href="#" class="hover:underline">Yoga</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-3">Hospedajes</h4>
        <ul class="space-y-2">
          <li><a href="#" class="hover:underline">La Fortuna</a></li>
          <li><a href="#" class="hover:underline">Monteverde</a></li>
          <li><a href="#" class="hover:underline">Tamarindo</a></li>
          <li><a href="#" class="hover:underline">Manuel Antonio</a></li>
          <li><a href="#" class="hover:underline">Jacó</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-3">Paquetes</h4>
        <ul class="space-y-2">
          <li><a href="#" class="hover:underline">Todo incluido</a></li>
          <li><a href="#" class="hover:underline">Aventura</a></li>
          <li><a href="#" class="hover:underline">Romántico</a></li>
          <li><a href="#" class="hover:underline">Wildlife</a></li>
          <li><a href="#" class="hover:underline">Nature</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-3">Internacional</h4>
        <ul class="space-y-2">
          <li><a href="#" class="hover:underline">Todo incluido</a></li>
          <li><a href="#" class="hover:underline">Aventura</a></li>
          <li><a href="#" class="hover:underline">Romántico</a></li>
          <li><a href="#" class="hover:underline">Wildlife</a></li>
          <li><a href="#" class="hover:underline">Nature</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Línea inferior -->
  <div class="mt-12 text-center text-sm text-white/80">
    © {new Date().getFullYear()} Afortunados. Todos los derechos reservados.
  </div>
</footer>
